        // Update the video layout to display in rows with four columns
        function updateVideoList(duration, selectedInstructor = "", selectedStyle = "", selectedDifficulty = "", selectedIntensity = "") {
            videoContainer.innerHTML = "";  // Clear the existing videos

            // Filter videos based on selected duration, instructor, style, difficulty, and intensity
            const filteredVideos = videos.filter(video =>
                video.duration <= duration &&
                (selectedInstructor === "" || video.instructor === selectedInstructor) &&
                (selectedStyle === "" || video.style === selectedStyle) &&
                (selectedDifficulty === "" || video.difficulty === selectedDifficulty) &&
                (selectedIntensity === "" || video.intensity === selectedIntensity)
            );

            // Display videos in rows with four columns
            const videoRow = document.createElement("div");
            videoRow.classList.add("video-row");
            filteredVideos.forEach(video => {
                const videoItem = createVideoElement(video.url);
                videoRow.appendChild(videoItem);
            });

            videoContainer.appendChild(videoRow);
        }

        // Function to create video element
        function createVideoElement(videoUrl) {
            const div = document.createElement("div");
            div.classList.add("video-item");
            const video = document.createElement("video");
            video.src = videoUrl;
            video.controls = true;
            div.appendChild(video);
            return div;
        }

        // Event listener for the filter input
        durationSlider.addEventListener("input", function () {
