                const selectedInstructor = option.getAttribute("data-instructor");
                const currentDuration = durationSlider.value;

                // Remove the "active" class and tick symbol from all options
                instructorOptions.forEach(option => {
                    option.classList.remove("active");
                });

                // Add the "active" class to the clicked option
                option.classList.add("active");

                updateVideoList(currentDuration, selectedInstructor, getSelectedStyle(), getSelectedDifficulty(), getSelectedIntensity());

                // Prevent the link from navigating to another page
                event.preventDefault();
            });
        });

        // Event listener for style filter
