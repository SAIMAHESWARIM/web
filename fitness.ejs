            const selectedStyle = getSelectedStyle();
            const selectedDifficulty = getSelectedDifficulty();
            const selectedIntensity = getSelectedIntensity();
            updateVideoList(value, selectedInstructor, selectedStyle, selectedDifficulty, selectedIntensity);
        });

        // Event listener for instructor filter
        instructorOptions.forEach(option => {
