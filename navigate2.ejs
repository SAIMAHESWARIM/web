        ];

        // Initial update to display videos based on the default filter value
        updateVideoList(90);
       
        /* ... (previous JavaScript code) */

        // Update the video layout to display in rows with four columns
        function updateVideoList(duration, selectedInstructor = "", selectedStyle = "", selectedDifficulty = "", selectedIntensity = "") {
            videoContainer.innerHTML = "";  // Clear the existing videos

            // Filter videos based on selected duration, instructor, style, difficulty, and intensity
            const filteredVideos = videos.filter(video =>
                video.duration <= duration &&
                (selectedInstructor === "" || video.instructor === selectedInstructor) &&
                (selectedStyle === "" || video.style === selectedStyle) &&
                (selectedDifficulty === "" || video.difficulty === selectedDifficulty) &&
                (selectedIntensity === "" || video.intensity === selectedIntensity)
            );

            // Display videos in rows with four columns
            const videoRow = document.createElement("div");
            videoRow.classList.add("video-row");
            filteredVideos.forEach(video => {
                const videoItem = createVideoElement(video.url);
                videoRow.appendChild(videoItem);
            });

            videoContainer.appendChild(videoRow);
        }

        // Function to create video element
        function createVideoElement(videoUrl) {
            const div = document.createElement("div");
            div.classList.add("video-item");
            const video = document.createElement("video");
            video.src = videoUrl;
            video.controls = true;
            div.appendChild(video);
            return div;
        }

        // Event listener for the filter input
        durationSlider.addEventListener("input", function () {
            const value = durationSlider.value;
            durationValue.textContent = value + " sec";
            const selectedInstructor = getSelectedInstructor();
            const selectedStyle = getSelectedStyle();
            const selectedDifficulty = getSelectedDifficulty();
            const selectedIntensity = getSelectedIntensity();
            updateVideoList(value, selectedInstructor, selectedStyle, selectedDifficulty, selectedIntensity);
        });

        // Event listener for instructor filter
        instructorOptions.forEach(option => {
            option.addEventListener("click", function (event) {
                const selectedInstructor = option.getAttribute("data-instructor");
                const currentDuration = durationSlider.value;

                // Remove the "active" class and tick symbol from all options
                instructorOptions.forEach(option => {
                    option.classList.remove("active");
                });

                // Add the "active" class to the clicked option
                option.classList.add("active");

                updateVideoList(currentDuration, selectedInstructor, getSelectedStyle(), getSelectedDifficulty(), getSelectedIntensity());

                // Prevent the link from navigating to another page
                event.preventDefault();
            });
        });

        // Event listener for style filter
        styleOptions.forEach(option => {
            option.addEventListener("click", function (event) {
                const selectedStyle = option.getAttribute("data-style");
                const currentDuration = durationSlider.value;

                // Remove the "active" class and tick symbol from all options
                styleOptions.forEach(option => {
                    option.classList.remove("active");
                });

                // Add the "active" class to the clicked option
                option.classList.add("active");

                updateVideoList(currentDuration, getSelectedInstructor(), selectedStyle, getSelectedDifficulty(), getSelectedIntensity());

                // Prevent the link from navigating to another page
                event.preventDefault();
            });
        });

        // Event listener for difficulty filter
        difficultyOptions.forEach(option => {
            option.addEventListener("click", function (event) {
                const selectedDifficulty = option.getAttribute("data-difficulty");
                const currentDuration = durationSlider.value;

                // Remove the "active" class and tick symbol from all options
                difficultyOptions.forEach(option => {
                    option.classList.remove("active");
                });

                // Add the "active" class to the clicked option
                option.classList.add("active");

                updateVideoList(currentDuration, getSelectedInstructor(), getSelectedStyle(), selectedDifficulty, getSelectedIntensity());

                // Prevent the link from navigating to another page
                event.preventDefault();
            });
        });

        // Event listener for intensity filter
        intensityOptions.forEach(option => {
            option.addEventListener("click", function (event) {
                const selectedIntensity = option.getAttribute("data-intensity");
                const currentDuration = durationSlider.value;

                // Remove the "active" class and tick symbol from all options
                intensityOptions.forEach(option => {
                    option.classList.remove("active");
                });

                // Add the "active" class to the clicked option
                option.classList.add("active");

                updateVideoList(currentDuration, getSelectedInstructor(), getSelectedStyle(), getSelectedDifficulty(), selectedIntensity);

                // Prevent the link from navigating to another page
                event.preventDefault();
            });
        });

        function getSelectedInstructor() {
            const selectedOption = document.querySelector("#instructor-content a.active");
            if (selectedOption) {
                return selectedOption.getAttribute("data-instructor");
            }
            return "";
        }

        function getSelectedStyle() {
            const selectedOption = document.querySelector("#style-content a.active");
            if (selectedOption) {
                return selectedOption.getAttribute("data-style");
            }
            return "";
        }

        function getSelectedDifficulty() {
            const selectedOption = document.querySelector("#difficulty-content a.active");
            if (selectedOption) {
                return selectedOption.getAttribute("data-difficulty");
            }
